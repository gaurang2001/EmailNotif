<div class="section" style="margin: 50px 50px 50px 50px;">
  <div class="container">
    <div id="w-node-509be705858e-72b94c39" class="contact-form-wrap">
      <div class="contact-form-heading-wrap"><h2>Sign Up</h2></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field cc-contact-field w-input', placeholder: 'Enter email' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <i>(<%= @minimum_password_length %> characters minimum)</i>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'text-field cc-contact-field w-input', placeholder: 'Enter password' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field cc-contact-field w-input', placeholder: 'Re-enter password' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign Up", class: "button w-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
